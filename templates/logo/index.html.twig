{% extends 'base.html.twig' %}

{% block title %}Material | Admin{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg nav-llanddev bg-llanddev">
        <div class="container">
            <a class="navbar-brand" to="/">
                <img src="/build/images/llanddev.235fc952.png" alt="llanddev"/>
            </a>
            <h1 style="color: white;"><small>Administrateur</small></h1>
        </div>
    </nav>
    <section class="section-bg">
        <div class="section-bg-opacity">
            <div style="min-height: 100vh;" class="container white-bg disposition shadow">
                <h1>Logos</h1>
                {{ form_start(form) }}

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-success">Ajout</button>

                {{ form_end(form) }}
                <br>
                <br>
                <table class="table table-hover">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Logo</th>
                        <th>Lien</th>
                        <th></th>
                    {% for logo in logos %}
                    <tr>
                        <td>{{ logo.id }}</td>
                        <td>{{ logo.name }}</td>
                        <td><img src="{{ logo.brand }}" alt="{{ logo.name }}"></td>
                        <td>{{ logo.link }}</td>
                        <td><a class="btn btn-defautlt" href="{{ path('update_logo', {'id': logo.id}) }}"><i class="fa fa-edit"></i></a></td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </section>
{% endblock %}
